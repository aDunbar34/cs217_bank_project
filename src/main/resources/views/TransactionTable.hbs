<!DOCTYPE html>
<html lang="en">


<head>
    <style>
        body {
            font-family: Tahoma, Geneva, sans-serif;
            background-image: url("/assets/Gradient-3.jpeg");
            margin: 0;
            padding: 0;
        }
        table {
            border-collapse: collapse;
            font-family: Tahoma, Geneva, sans-serif;
            margin-left: auto;
            margin-right: auto;
        }
        table td {
            padding: 10px 35px 10px 35px;
        }
        table thead {
            background-color: #8cadff;
            color: #3C4F76;
            font-weight: bold;
            font-size: 13px;
            border: 2px solid #4c7254;
            width:150px;
        }
        table tbody td {
            color: #636363;
            border: 1px solid #dddfe1;
        }
        table tbody tr {
            background-color: #f3f3f3;
        }
        table tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }
        #navMenu {
            margin-top:0px;
            margin-left: 200px ;
            position: relative;
            list-style: none;
        }
        #navMenu ul{
            padding: 0;
            margin: 0;
            text-align: center;
            display: inline-block;
            list-style-type: none;
        }
        #navMenu li {
            border: 1px solid #4c7254;
            display: inline-block;
        }
        #navMenu a {
            text-decoration: none;
            width:150px;
            display: block;
            padding: 12px 16px;
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            background-color: #8cadff;
            color: #3C4F76;
        }
        nav {
            display:inline-block;
            text-align: center;
        }
        #navMenu a:hover {
            background-color: #abcef3;
        }
                #pagination {
            border: 2px solid #4c7254;
            text-align: center;
            background-color: #8cadff;
            font-weight: bold;
        }
    </style>


    <script type = "text/javascript" src = "Transactions.js"></script>
</head>


<body>
<div style = "text-align:center;color:#3C4F76;background-image:url(/assets/background.jpg);border: 2px solid #4c7254;">
    <h1>Transaction Info</h1>
</div>

<nav>
    <ul id = "navMenu">
        <li><a href="http://localhost:8080/bank">Home</a></li>
        <li><a href="http://localhost:8080/table">Accounts</a></li>
        <li><a href="http://localhost:8080/TransactionTable">Transactions</a></li>
        <li><a href="http://localhost:8080/transactionDetails">Transaction Info</a></li>
        <li><a href="http://localhost:8080/about">About</a></li>
    </ul>
</nav>
<p style = "text-align:center;margin: auto;display: block;"><input type="text" id="searchInput" placeholder="Search..."></p>
<table id="myTable">
    <thead>
    <tr>
        <th><h1>Withdraw Account</h1></th>
        <th><h1>Deposit Account</h1></th>
        <th><h1>Timestamp</h1></th>
        <th><h1>Transaction ID</h1></th>
        <th><h1>Amount</h1></th>
        <th><h1>Currency</h1></th>
    </tr>
    </thead>
    {{#transactions}}
        <tr>
            <td>{{withdrawAcc}}</td>
            <td>{{depositAcc}}</td>
            <td>{{timestamp}}</td>
            <td>{{transactionID}}</td>
            <td>{{amount}}</td>
            <td>{{currency}}</td>
        </tr>
    {{/transactions}}
</table>
<div id="pagination"></div>
</body>

<script>
    const table = document.getElementById("myTable");
    const searchInput = document.getElementById("searchInput");
    const pagination = document.getElementById("pagination");

    let currentPage = 1;
    let rowsPerPage = 20;

    function displayTableRows() {
        let rows = table.rows;
        let totalRows = rows.length;
        let startIndex = (currentPage - 1) * rowsPerPage;
        let endIndex = startIndex + rowsPerPage;

        for (let i = 0; i < totalRows; i++) {
            if (i < startIndex || i >= endIndex) {
                rows[i].style.display = "none";
            } else {
                rows[i].style.display = "";
            }
        }
    }

    function generatePaginationLinks() {
        let totalRows = table.rows.length;
        let totalPages = Math.ceil(totalRows / rowsPerPage);
        let links = "";

        for (let i = 1; i <= totalPages; i++) {
            if (i === currentPage) {
                links += `<span>${i}</span>`;
            } else {
                links += `<a href="#" onclick="changePage(${i})">   ${i}   </a>`;
            }
        }

        pagination.innerHTML = links;
    }

    function changePage(page) {
        currentPage = page;
        displayTableRows();
        generatePaginationLinks();
    }

    function searchTable() {
        let searchText = searchInput.value.toLowerCase();
        let rows = table.rows;

        for (let i = 1; i < rows.length; i++) {
            let rowText = rows[i].textContent.toLowerCase();

            if (rowText.includes(searchText)) {
                rows[i].style.display = "";
            } else {
                rows[i].style.display = "none";
            }
        }

        currentPage = 1;
        generatePaginationLinks();
    }

    displayTableRows();
    generatePaginationLinks();

    searchInput.addEventListener("input", searchTable);



</script>








</html>