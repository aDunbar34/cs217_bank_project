<!DOCTYPE html>
<html lang="en">


<head>
    <style>
        body {
            font-family: Tahoma, Geneva, sans-serif;
            background-color: #3C4F76;
        }
table {
    border-collapse: collapse;
    font-family: Tahoma, Geneva, sans-serif;
    margin-left: auto;
    margin-right: auto;
}
table td {
    padding: 10px 35px 10px 35px;
}
table thead {
    background-color: #C6D8FF;
    color: #3C4F76;
    font-weight: bold;
    font-size: 13px;
    border: 2px solid #4c7254;
}
table tbody td {
	color: #636363;
	border: 1px solid #dddfe1;
}
table tbody tr {
    background-color: #f3f3f3;
}
table tbody tr:nth-child(odd) {
	background-color: #ffffff;
}
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
        li {
            padding: 10px 35px 10px 35px;
            border: 1px solid #4c7254;
            background-color: #C6D8FF;
            color: #3C4F76;
            display:inline-block;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }
</style>



</head>


<body>
<div style = "text-align:center;color:#3C4F76;background-color:#C6D8FF;border: 2px solid #4c7254;">
<h1>Account Data</h1>
</div>

<ul>
    <li><a href="">Home</a></li>
    <li><a href="">Accounts</a></li>
    <li><a href="">Transactions</a></li>
    <li><a href="">About</a></li>
</ul>

<p style = "text-align:center;margin: 0 auto;display: block;"><input type="text" id="searchInput" placeholder="Search..."></p>
<table id="myTable">
    <thead>
    <tr>
        <th><h1>Account ID</h1></th>
        <th><h1>Name</h1></th>
        <th><h1>Balance</h1></th>
        <th><h1>Currency</h1></th>
        <th><h1>Account Type</h1></th>

    </tr>
    </thead>
    {{#users}}
    <tr>
        <td>{{id}}</td>
        <td>{{name}}</td>
        <td>{{balance}}</td>
        <td>{{currency}}</td>
        <td>{{accountType}}</td>
    </tr>
    {{/users}}
</table>
<div id="pagination"></div>
</body>

<script>
const table = document.getElementById("myTable");
const searchInput = document.getElementById("searchInput");
const pagination = document.getElementById("pagination");

let currentPage = 1;
let rowsPerPage = 20;

function displayTableRows() {
  let rows = table.rows;
  let totalRows = rows.length;
  let startIndex = (currentPage - 1) * rowsPerPage;
  let endIndex = startIndex + rowsPerPage;

  for (let i = 0; i < totalRows; i++) {
    if (i < startIndex || i >= endIndex) {
      rows[i].style.display = "none";
    } else {
      rows[i].style.display = "";
    }
  }
}

function generatePaginationLinks() {
  let totalRows = table.rows.length;
  let totalPages = Math.ceil(totalRows / rowsPerPage);
  let links = "";

  for (let i = 1; i <= totalPages; i++) {
    if (i === currentPage) {
      links += `<span>${i}</span>`;
    } else {
      links += `<a href="#" onclick="changePage(${i})">${i}</a>`;
    }
  }

  pagination.innerHTML = links;
}

function changePage(page) {
  currentPage = page;
  displayTableRows();
  generatePaginationLinks();
}

function searchTable() {
  let searchText = searchInput.value.toLowerCase();
  let rows = table.rows;

  for (let i = 1; i < rows.length; i++) {
    let rowText = rows[i].textContent.toLowerCase();

    if (rowText.includes(searchText)) {
      rows[i].style.display = "";
    } else {
      rows[i].style.display = "none";
    }
  }

  currentPage = 1;
  generatePaginationLinks();
}

displayTableRows();
generatePaginationLinks();

searchInput.addEventListener("input", searchTable);



    </script>

</html>

